---
layout: base.njk
---

<div class="content post">
  	<h1>{{ title }}</h1>
	{% if image %}
	<img class="postimage" src="{{ image }}" alt="{{ imageAlt }}" fetchpriority="high" />
	{% endif %}
	<div class="incontent{% if siteelements.features.initialLetter %} initial-letter{% endif %}">
  		{{ content | safe }}
	</div>
  	{% if siteelements.features.sharer %}{% include "social.njk" %}{% endif %}
</div>