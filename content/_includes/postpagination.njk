<div class="mt-2 mx-8 lg:ml-24">
	{% if pagination.pages.length > 1 %}
	<ul class="pagination flex list-none center pb-12 sm:pb-8">
	    {% if pagination.pageNumber > 0 %}
	    <li class="mr-3">
			<div class="leading-relaxed">
				{% if not pagination.href.first %}
				<span class="block cursor-not-allowed">&lt;&lt;</a>
				{% else %}
				<a href="{{ pagination.href.first }}" class="block">&lt;&lt;</a>
				{% endif %}
			</div>
		</li>
	    <li class="mr-3">
			<div class="leading-relaxed">
				{% if not pagination.href.previous %}
				<span class="block cursor-not-allowed">&lt;</a>
				{% else %}
				<a href="{{ pagination.href.previous }}" class="block">&lt;</a>
				{% endif %}
			</div>
		</li>
		{% endif %}
	    {% for pageEntry in pagination.pages %}
		{% if loop.index0 < 6  and pagination.hrefs[loop.index0 + pagination.pageNumber] %}
	    <li class="mr-3">
			<div class="leading-pagination{% if pagination.hrefs[loop.index0 + pagination.pageNumber] === page.url %} active{% endif %}">
				<a href="{{ pagination.hrefs[loop.index0 + pagination.pageNumber] }}" class="block">{{ loop.index + pagination.pageNumber }}</a>
			</div>
		</li>
		{% endif %}
		{% endfor %}
		{% if (pagination.pageNumber + 5) < pagination.pages.length %}
	    <li class="mr-3">
			<div class="leading-relaxed">
				<a href="{{ pagination.href.next }}" class="block">&gt;</a>
			</div>
		</li>
	    <li class="mr-3">
			<div class="leading-relaxed">
				<a href="{{ pagination.href.last }}" class="block">&gt;&gt;</a>
			</div>
		</li>
		{% endif %}
	</ul>
	{% endif %}
</div>