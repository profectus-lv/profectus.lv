<div id="sidebar-contents" class="sidebar grid grid-cols-1 gap-4 content-between relative">
    <svg class="sidebar-close" role="button" onclick="slideLeftSidebar()" aria-label="{{ sitestrings[siteconfig.lang].close_sidebar_menu }}" viewBox="{{ inlinesvg.close.viewBox }}" xmlns="http://www.w3.org/2000/svg">
        <title>Close</title>
        <path d="{{ inlinesvg.close.path }}" />
    </svg>
    <div class="sitehero {% if siteelements.features.siteheroStyle == "rounded" %}sitehero-rounded{% endif %}">
        <a href="/" aria-label="{{ siteelements.menuHome }}">
            <img class="nolqip" alt="{{ siteconfig.imageAlt }}" src="{{ siteconfig.image }}" loading="eager" eleventy:widths="160,320,480,640,960,1280" sizes="(max-width: 640px) 100vw, 480px" eleventy:pictureattr:sizes="(max-width: 640px) 100vw, 480px"/>
        </a>
        <a class="sitetitle" href="/" aria-label="{{ siteelements.menuHome }}">{{ siteconfig.title }}</a>
        <div class="sitedesc">
            {{ siteconfig.description }}
        </div>
    </div>
    {% if siteelements.features.sitesocial == "above" %}
        {% include "sitesocial.njk" %}
    {% endif %}
    <div class="menu">
        <ul>
            <li class="navitem {{ page.url | isHomeLink('/') }}">
                <a href="/" aria-label="{{ siteelements.menuHome }}">{{ siteelements.menuHome }}</a>
            </li>
            {% for name, link in siteelements.menuItems %}
            <li class="navitem {{ page.url | isActiveLink(link) }}">
                <a href="{{ link }}" aria-label="{{ name }}">{{ name }}</a>
            </li>
            {% endfor %}
        </ul>
    </div>
    {% if siteelements.features.search %}
    <div class="sidebar-search">
        <button id="sidebar-search-open" class="sidebar-search-button" type="button" onclick="searchButton()" aria-haspopup="dialog" aria-controls="search-modal" aria-label="{{ sitestrings[siteconfig.lang].search_open }}">
            <svg viewBox="{{ inlinesvg.search.viewBox }}" xmlns="http://www.w3.org/2000/svg">
                <path d="{{ inlinesvg.search.path }}" />
            </svg>
        </button>
    </div>
    {% endif %}
    {% if siteelements.features.sitesocial == "below" %}
        {% include "sitesocial.njk" %}
    {% endif %}
    <div class="privacy-policy flex items-center justify-center gap-6">
        {% if siteelements.features.privacyPolicy == "sidebar" %}
        <a href="{{ siteelements.privacyPolicy.url }}" aria-label="{{ siteelements.privacyPolicy.name }}">{{ siteelements.privacyPolicy.name }}</a>
        {% endif %}
        {% if siteelements.features.colorMode != "light" and siteelements.features.colorMode != "dark" %}
        <div id="sidebar-color-toggle" class="sidebar-colormode hidden sm:inline-flex items-center gap-2">
            <svg viewBox="{{ inlinesvg.lightMode.viewBox }}" onclick="toggleDarkLightMode(false)" aria-label="{{ sitestrings[siteconfig.lang].color_mode }}" class="lighttoggle">
                <path d="{{ inlinesvg.lightMode.path }}" />
            </svg>
            <svg viewBox="{{ inlinesvg.darkMode.viewBox }}" onclick="toggleDarkLightMode(false)" aria-label="{{ sitestrings[siteconfig.lang].color_mode }}" class="darktoggle">
                <path d="{{ inlinesvg.darkMode.path }}" />
            </svg>
        </div>
        {% endif %}
    </div>
</div>