<div class="postlist">
	{% if siteelements.header and siteheader %}
		{% if siteelements.headerLink %}
			<a class="siteheaderlink" href="{{ siteelements.headerLink }}">
				<img class="siteheader" src="{{ siteelements.header }}" alt="{{ siteelements.headerAlt }}" fetchpriority="high" />
			</a>
		{% else %}
			<img class="siteheader" src="{{ siteelements.header }}" alt="{{ siteelements.headerAlt }}" fetchpriority="high" />
		{% endif %}
	{% endif %}
	{% if title and not authorCard %}<h1>{{ title }}</h1>{% endif %}
	{% for post in posts %}
	{% set isPinned = post.data.tags and "pinned" in post.data.tags %}
	<div class="postlistitem {% if isPinned %}pinned{% endif %} {% if siteelements.features.postlistThumbnail == 'right' %}thumb-right{% endif %}">
		<div class="postlistheading">
			<a href="{{ post.url | url }}" aria-label="{{ post.data.title }}">
				{% if isPinned %}
					<span class="pinned-badge inline-flex items-center">
						<svg class="pin-icon" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="{{ inlinesvg.pin.viewBox }}">
							<path d="{{ inlinesvg.pin.path }}" />
						</svg>
						<span class="sr-only">{{ sitestrings.pinned_badge }}</span>
					</span>
				{% endif %}
				{{ post.data.title }}
			</a>
		</div>
		{% if siteelements.features.postlistThumbnail and post.data.image %}
			<div class="postlistrow flex flex-col items-start gap-3 md:flex-row md:items-stretch md:gap-4 {% if siteelements.features.postlistThumbnail == 'right' %}md:flex-row-reverse{% endif %}">
				<a class="postthumblink" href="{{ post.url | url }}" aria-label="{{ post.data.title }}">
					<img class="postthumb" src="{{ post.data.image }}" alt="{{ post.data.title }}" eleventy:widths="160,320,480,640,960,1280" sizes="(max-width: 640px) 100vw, 480px" eleventy:pictureattr:sizes="(max-width: 640px) 100vw, 480px" />
				</a>
				<div class="postlistside">
					<div class="postexcerpt">{% if post.data.excerpt %}{{ post.data.excerpt }}{% else %}{% getExcerpt post %}{% endif %}</div>
					{% if siteelements.features.postproperties %}
					{% include "postproperties.njk" %}
					{% endif %}
				</div>
			</div>
		{% else %}
			<div class="postexcerpt">{% if post.data.excerpt %}{{ post.data.excerpt }}{% else %}{% getExcerpt post %}{% endif %}</div>
			{% if siteelements.features.postproperties %}
			{% include "postproperties.njk" %}
			{% endif %}
		{% endif %}
	</div>
	{% endfor %}
</div>
{% include "postpagination.njk" %}