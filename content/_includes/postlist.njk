{% for post in posts %}
<div>
	<div class="pb-4 pt-4">
		<a class="text-gray-900 text-2xl font-semibold font-header postlistheading" href="{{ post.url | url }}">{{ post.data.title }}</a>
	</div>
	<div class="pb-4 text-gray-700 font-body font-normal">{% if post.data.excerpt %} {{ post.data.excerpt }} {% else %} {% excerpt post %} {% endif %}</div>
	<div class="pb-6 text-sm text-gray-500 border-b-1 border-gray-700 border-opacity-20 flex">
		<div class="flex">
			<svg role="img" version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="{{ inlinesvg.calendar.viewBox }}" class="h-5 w-4 mr-2">
				<path d="{{ inlinesvg.calendar.path }}" />
			</svg>
			{{ post.date | readableDate }}
		</div>
		{% if post.data.tags.includes("event") %}
		<div class="flex h-5 w-8 mr-2 ml-12">
			{{ sitestrings.event }}
			<span></span>
		</div>
		{% else %}
		<div class="readingtime flex" data-words="{{ post.templateContent | striptags | wordcount | formatWords }} {{ sitestrings.words }}">
			<svg role="img" version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="{{ inlinesvg.readingTime.viewBox }}" class="h-5 w-8 mr-2 ml-12">
				<path d="{{ inlinesvg.readingTime.path }}" />
			</svg>
			{{ post.templateContent | striptags | wordcount | readingTime }}
			<span></span>
		</div>
		{% endif %}
	</div>
</div>
{% endfor %}