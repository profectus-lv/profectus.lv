<div class="social flex flex-row-reverse mt-8 mb-4">
    <a href="#" aria-label="Copy page link to clipboard" onclick="copyUrlToClipboard()" class="link">
        <span></span>
        <svg role="img" version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="{{ inlinesvg.share.viewBox }}" class="share">
            <path d="{{ inlinesvg.share.path }}" />
        </svg>
    </a>
    <a href="https://www.facebook.com/sharer/sharer.php?u={{ page.url | absoluteUrl }}&display=popup&app_id={{ siteconfig.pixels.fbApp }}" target="_blank" rel="noopener" aria-label="Share on Facebook (opens new tab)">
        <span></span>
        <svg role="img" version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="{{ inlinesvg.facebook.viewBox }}" class="facebook">
            <path d="{{ inlinesvg.facebook.path }}" />
        </svg>
    </a>
    <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ page.url | absoluteUrl }}" target="_blank" rel="noopener" aria-label="Share on LinkedIn (opens new tab)">
        <span></span>
        <svg role="img" version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="{{ inlinesvg.linkedin.viewBox }}" class="linkedin">
            <path d="{{ inlinesvg.linkedin.path }}" />
        </svg>
    </a>
    <a href="https://x.com/intent/post?text={{ title }}&url={{ page.url | absoluteUrl }}&via={{ siteconfig.social.twitter_x }}" target="_blank" rel="noopener" aria-label="Share on X (opens new tab)" class="fill">
        <span></span>
        <svg role="img" version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="{{ inlinesvg.twitter_x.viewBox }}" class="twitter_x">
            <path d="{{ inlinesvg.twitter_x.path }}" />
        </svg>
    </a>
    <span class="mr-1">{{ sitestrings.share }}: </span>
</div>