<!doctype html>
<html lang="{{ siteconfig.lang }}">
    <head>
        {% include "head.njk" %}
        {% if siteconfig.features.json_ld %}{% include "json-ld.njk" %}{% endif %}
    </head>
    <body>
    {% if siteconfig.features.base == "primitive" %}
        {{ content | safe }}
    {% else %}
        <div class="grid grid-flow-col grid-cols-[0_auto] sm:grid-cols-[minmax(auto,_0fr)_auto] h-screen">
            <div id="sidebar" class="-translate-x-60 sm:translate-x-0">
                {% include "sidebar.njk" %}
            </div>
            <div id="right-area">
                {% if siteconfig.features.topbar %}
                <div {% if siteconfig.features.topbar == "dynamic" %}id="top-bar"{% endif %} class="top-bar">
                    {% include "topbar.njk" %}
                </div>
                {% endif %}
                <div class="max-w-content">
                    <main>
                        {{ content | safe }}
                    </main>
                </div>
                {% if siteconfig.features.footer %}
                    {% include "footer.njk" %}
                {% endif %}
            </div>
        </div>
    {% endif %}
    </body>
</html>