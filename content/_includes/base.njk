<!doctype html>
<html lang="{{ siteconfig.locale | truncate(2, true, "") }}">
    <head>
        {% include "head.njk" %}
        {% include "json-ld.njk" %}
    </head>
    <body class="tracking-wider overflow-x-hidden sm:overflow-auto">
        <div class="grid grid-flow-col grid-cols-[0_auto] sm:grid-cols-[minmax(auto,_0fr)_auto] h-screen overflow-y-hidden">
            <div id="sidebar" class="transition-transform -translate-x-60 sm:translate-x-0 sm:transition-none">
                {% include "sidebar.njk" %}
            </div>
            <div id="right-area" class="overflow-x-hidden sm:overflow-auto transition-transform sm:translate-x-0 sm:transition-none">
                <div id="top-bar" class="sm:hidden h-12 z-10 transition-transform duration-200 ease-in top-0">
                    {% include "topbar.njk" %}
                </div>
                <div class="grid grid-flow-col grid-cols-auto xl:grid-cols-[auto_6rem] max-w-content">
                    <main class="min-w-0">
                        {{ content | safe }}
                    </main>
                </div>
            </div>
        </div>
    </body>
</html>