<footer class="footer">
    <div class="footer-content max-w-content">
        {% set copyright = siteelements.copyright %}
        <div class="footer-copyright">
            <span class="footer-copyright-text">
                &copy; {% if copyright.year %}{{ copyright.year }}{% else %}{% year %}{% endif %}
            </span>
            {% if copyright.link %}
            <a href="{{ copyright.link }}" class="footer-copyright-author">
                {{ siteauthors[siteconfig.author].fullName if siteauthors[siteconfig.author] else siteconfig.author }}
            </a>
            {% else %}
            <span class="footer-copyright-author">
                {{ siteauthors[siteconfig.author].fullName if siteauthors[siteconfig.author] else siteconfig.author }}
            </span>
            {% endif %}
            <span class="footer-copyright-text">
                {{ copyright.text }}
            </span>
        </div>
        {% if siteelements.features.privacyPolicy == "footer" %}
        <div class="footer-privacy">
            <span class="footer-privacy-sep">&middot;</span>
            <a href="{{ siteelements.privacyPolicy.url }}" class="footer-privacy-policy" aria-label="{{ siteelements.privacyPolicy.name }}">
                {{ siteelements.privacyPolicy.name }}
            </a>
        </div>
        {% endif %}
        {% if siteelements.features.poweredBy %}
        <div class="footer-poweredby">
            <span class="footer-poweredby-prefix">
                {{ siteelements.poweredBy.text }}
            </span>
            {% if siteelements.poweredBy.url %}
            <a href="{{ siteelements.poweredBy.url }}" class="footer-poweredby-link" aria-label="{{ siteelements.poweredBy.name }}">
                {{ siteelements.poweredBy.name }}
            </a>
            {% else %}
            <span class="footer-poweredby-text">
                {{ siteelements.poweredBy.name }}
            </span>
            {% endif %}
        </div>
        {% endif %}
    </div>
</footer>